<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="vertical" >

            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/title" />

            <TextView
                android:id="@+id/titleTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" />

            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/year" />

            <TextView
                android:id="@+id/yearTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" />

            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/mpaa_rating" />

            <TextView
                android:id="@+id/mpaaTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" />

            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/runtime" />

            <TextView
                android:id="@+id/runtimeTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" />

            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/critics_consensus" />

            <TextView
                android:id="@+id/criticsTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" />
            
            <TextView
                style="@style/GridLabelText"
                android:layout_gravity="left"
                android:text="@string/info" />
            
          	<TextView
                android:id="@+id/infoTV"
                style="@style/GridAnswerText"
                android:layout_gravity="left" 
                android:textColor="#4141F2"/>
            
        </GridLayout>

    </ScrollView>

</LinearLayout>