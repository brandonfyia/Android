package com.example.json;

import org.json.JSONException;
import org.json.JSONObject;

// TODO: Auto-generated Javadoc
/**
 * The Class JSON.
 */
public class JSON {
	
	/**
	 * Read the JSON.
	 *
	 * @param selected passed from MainActivity.java
	 * @return result passes back the requested info from the JSON.
	 */
	public static String readJSON(JSONObject json, String selected) 
	{
		String result;
		JSONObject object = json;
		
		try 
		{
			//JSON Array Object 0 is Movies. get string provides the detail Object.
			result = object.getJSONArray("movies").getJSONObject(0).getString(selected);
			
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			result = e.toString();
		}
		
		return result;
	}

}
