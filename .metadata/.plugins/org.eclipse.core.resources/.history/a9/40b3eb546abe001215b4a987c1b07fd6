package com.example.java1week2_4;

import com.example.json.Movie;
import com.example.lib.FormThings;
import com.example.lib.RadioThings;

import android.os.Bundle;
import android.app.Activity;
import android.util.Log;
import android.view.Menu;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.LinearLayout;
import android.widget.RadioGroup;

public class MainActivity extends Activity {
	
	String[] detailNames = new String[5];

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
		
		LinearLayout ll = new LinearLayout(this);
		
		detailNames[0] = Movie.Title.name().toString();
		Log.i("The name is:", detailNames[0]);
		detailNames[1] = Movie.Year.name().toString();
		Log.i("The name is:", detailNames[1]);
		detailNames[2] = Movie.MPAA.name().toString();
		Log.i("The name is:", detailNames[2]);
		detailNames[3] = Movie.RunTime.name().toString();
		Log.i("The name is:", detailNames[3]);
		detailNames[4] = Movie.Critics.name().toString();
		Log.i("The name is:", detailNames[4]);
		
		RadioGroup movieDetails = FormThings.getOptions(this, detailNames);
		
		ll.addView(movieDetails);
		
		LinearLayout entryBox = FormThings.singleEntryWithButton(this, "Get Info");
		Button infoButton = (Button) entryBox.findViewById(2);
		
		infoButton.setOnClickListener(new View.OnClickListener() 
		{	
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				
				
			}
		});
		
		ll.addView(entryBox);
		
		setContentView(ll);
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}

}
